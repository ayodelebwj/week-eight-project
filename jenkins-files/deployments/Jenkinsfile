pipeline {
    agent any
    
    environment {
        AWS_ACCESS_KEY_ID = credentials ('aws-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials ('aws-secret-access-key')
        AWS_DEFAULT_REGION = 'us-east-2'
        WEB_MACHINE_PRIVATE_IP = ''
        JAVA_INSTANCE_PUBLIC_IP = ''
        PYTHON_INSTANCE_PUBLIC_IP = ''
    }

    parameters {
        choice(
        name: 'TF_ACTION',
        choices: ['GET_TARGET_MACHINES_IP_ADDRESSES', 'DEPLOY_NGINX_WEB_APP', 'DEPLOY_JAVA_APP', 'DEPLOY_PYTHON_APP'],
        description: 'Select Action To Perform'
    )

    }

    stages {
        stage ('Get target machines ip addresses') {
        when {
            expression {params.TF_ACTION == 'GET_TARGET_MACHINES_IP_ADDRESSES'}
        }
            steps {
                sh '''
                web_instance_private_ip=$(aws ec2 describe-instances --filters "Name=tag:Name,Values=web-instance" \
                --query "Reservations[0].Instances[0].PrivateIpAddress" \
                --output text);
                env.WEB_INSTANCE_PRIVATE_IP = ${web_instance_private_ip};

                java_instance_public_ip=$(aws ec2 describe-instances --filters "Name=tag:Name,Values=java-instance" \
                --query "Reservations[0].Instances[0].PublicIpAddress" \
                --output text);
                env.JAVA_INSTANCE_PUBLIC_IP = ${java_instance_public_ip};

                python_instance_public_ip=$(aws ec2 describe-instances --filters "Name=tag:Name,Values=python-instance" \
                --query "Reservations[0].Instances[0].PublicIpAddress" \
                --output text);
                env.PYTHON_INSTANCE_PUBLIC_IP = ${python_instance_public_ip};
                '''
            }
        }


        stage ('Deploy Web App Nginx') {
        when {
            expression {params.TF_ACTION == 'WEB_APP_NGINX'}
        }
            steps {
                 sshagent (credentials: ['AWS-SSH-KEY']) {
                sh '''
                WEB_INSTANCE_PRIVATE_IP=$(aws ec2 describe-instances --filters "Name=tag:Name,Values=web-instance" \
                --query "Reservations[0].Instances[0].PrivateIpAddress" \
                --output text);
                ssh -o StrictHostKeyChecking=no ubuntu@$WEB_INSTANCE_PRIVATE_IP 'cd ~ ;
                export ${env.AWS_ACCESS_KEY_ID}
                export ${env.AWS_SECRET_ACCESS_KEY}
                export ${env.AWS_DEFAULT_REGION}
                sudo apt install nginx -y ; 
                sudo systemctl daemon-reload ;
                sudo systemctl enable nginx ;
                sudo systemctl start nginx ;
                sudo rm -rf fruits-veg_market ;
                cd ~;
                git clone https://github.com/techbleat/fruits-veg_market.git ;
                cd ~/fruits-veg_market/web ;
                sed -i "s|http://VEG_MACHINE:8080|http://${env.JAVA_INSTANCE_PUBLIC_IP}:8080|g" index.html;
                sed -i "s|http://FRUIT_MACHINE:9000|http://${env.PYTHON_INSTANCE_PUBLIC_IP}:9000|g" index.html;
                sudo cp ~/fruits-veg_market/web/index.html /var/www/html/index.html'
                '''
                 }
            }
        }

        stage ('Deploy Java App') {
        when {
            expression {params.TF_ACTION == 'JAVA_APP'}
        }
            steps {
                 sshagent (credentials: ['AWS-SSH-KEY']) {
                sh """
                ssh -o StrictHostKeyChecking=no ubuntu@${env.JAVA_INSTANCE_PUBLIC_IP} 
                'sudo cp vegetables.service /etc/systemd/system/vegetables.service;
                cd ~ ;
                sudo rm -rf fruits-veg_market ;
                cd ~;
                git clone https://github.com/techbleat/fruits-veg_market.git ;
                sudo systemctl daemon-reload ;
                sudo systemctl enable vegetables.service ;
                sudo systemctl restart vegetables.service ;
                """
                 }
            }

        }

        stage ('Deploy Python App') {
        when {
            expression {params.TF_ACTION == 'PYTHON_APP'}
        }
            steps {
                 sshagent (credentials: ['AWS-SSH-KEY']) {
                sh """
                ssh -o StrictHostKeyChecking=no ubuntu@${env.PYTHON_INSTANCE_PUBLIC_IP} 
                'sudo cp fruits.service /etc/systemd/system/fruits.service;
                cd ~ ;
                sudo rm -rf fruits-veg_market ;
                git clone https://github.com/techbleat/fruits-veg_market.git ;
                cd ~/fruits-veg_market/python;
                python3 -m venv .venv;
                source .venv/bin/activate;
                python -m pip install -r requirements.txt;
                sudo systemctl daemon-reload ;
                sudo systemctl enable fruits.service ;
                sudo systemctl restart fruits.service ;
                """
                 }
            }

        }
    }

    post {
        success {
            echo 'App deployed successfully'
        }

        failure {
            echo 'App deployment failed'
        }
    }


}